	ln -f wxclip $(APPNAME)/Contents/MacOS/wxclip
	cp -f clipboard.bmp $(APPNAME)/Contents/Resources/pixmaps/
	cp -f wxclip.icns $(APPNAME)/Contents/Resources/wxclip.icns

