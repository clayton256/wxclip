	mkdir -p $(APPNAME)/Contents
	mkdir -p $(APPNAME)/Contents/MacOS
	mkdir -p $(APPNAME)/Contents/Resources
	mkdir -p $(APPNAME)/Contents/Resources/pixmaps/
	sed -e "s/IDENTIFIER/`echo ../wxclip | sed -e 's,\.\./,,g' | sed -e 's,/,.,g'`/" \
