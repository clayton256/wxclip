WXDIR=/home/mark/Projects/wxWidgets-master/gtk-debug/
CC = gcc

PROGRAM = wxclip

OBJECTS = $(PROGRAM).o

# implementation

.SUFFIXES:	.o .cpp

.cpp.o :
	$(CC) -c -g -DMYTASKBARICON `$(WXDIR)wx-config --cflags` -o $@ $<

all:    $(PROGRAM)

$(PROGRAM):	$(OBJECTS)
	$(CC) -g -o $(PROGRAM) $(OBJECTS) `$(WXDIR)wx-config --libs`

clean: 
	rm -f *.o $(PROGRAM)
